{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "source_ami": "ami-f976839e",
    "instance_type": "t2.micro",
    "region": "eu-west-2"

  },
  "builders":[
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "ec2-user",
      "ami_name": "amalinowski jenkins-ami {{timestamp}}"
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": [
        "sudo pip install ansible"
      ]
    },
    {
      "type": "file",
      "source": "../ansible/vault/.vault_pass",
      "destination": "/tmp/.vault_pass"
    },
    {
      "type": "ansible-local",
      "playbook_file": "../ansible/install_jenkins_book.yml",
      "inventory_file": "../ansible/hosts/hostsMain",
      "host_vars": "../ansible/hosts/host_vars",
      "role_paths": ["../ansible/roles"],
      "playbook_dir": "../ansible",
      "extra_arguments":[
        "--vault-password-file=/tmp/.vault_pass"
      ]
    }
  ]
}